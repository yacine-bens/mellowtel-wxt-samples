{
  "name": "mellowtel-wxt-sample-option-1",
  "description": "Sample extension for Mellowtel using WXT framework",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
